<IfModule mod_vhost_alias.c>
    UseCanonicalName Off
    VirtualDocumentRoot /home/travis/vhosts/%0/web
    <Directory /home/travis/vhosts>
        Options FollowSymLinks
     
        #<IfModule !mod_authz_core.c>
            # apache <= 2.2
            Order deny,allow
            Allow from all
        #</IfModule>   
        #<IfModule mod_authz_core.c>
            # apache >= 2.4
            Require all granted
        #</IfModule>
        
        AllowOverride All
    </Directory>
</IfModule>
